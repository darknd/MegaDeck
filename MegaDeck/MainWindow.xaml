<Window x:Class="MegaDeck.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MegaDeck - DaRKND 2026 - Version 0.3" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E2F">

    <Window.Resources>
        <!-- Colores principales -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#1E1E2F"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#2D2D3C"/>
        <SolidColorBrush x:Key="AccentColor" Color="#FF4081"/>
        <SolidColorBrush x:Key="ButtonHoverColor" Color="#FF5C91"/>
        <SolidColorBrush x:Key="TextColor" Color="White"/>

        <!-- Estilo botones laterales -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource ButtonHoverColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        <!-- Barra lateral izquierda -->
        <StackPanel DockPanel.Dock="Left" Width="180" Background="{StaticResource SecondaryColor}">
            <TextBlock Text="MegaDeck" Foreground="{StaticResource AccentColor}" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
            <Button Content="Library" Style="{StaticResource SidebarButtonStyle}" Click="GoToLibrary"/>
            <Button Content="Settings" Style="{StaticResource SidebarButtonStyle}" Click="GoToSettings"/>
            <Button Content="Exit" Style="{StaticResource SidebarButtonStyle}" Click="Exit_Click"/>
        </StackPanel>

        <!-- Área de contenido dinámico -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="{StaticResource PrimaryColor}"/>
    </DockPanel>
</Window>
