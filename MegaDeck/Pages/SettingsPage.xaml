<Page x:Class="MegaDeck.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SettingsPage">

    <Grid Background="DimGray" Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">

            <TextBlock Text="📂 Roms folder"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBox x:Name="txtRomsPath"
                     FontSize="14"
                     Height="30"
                     IsReadOnly="True"
                     Background="White"
                     Foreground="Black"
                     Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Examinar..." Width="100" Margin="0,0,10,0" Click="Browse_Click"/>
                <Button Content="Guardar" Width="100" Click="Save_Click"/>
            </StackPanel>

            <TextBlock x:Name="lblStatus"
                       Text=""
                       Foreground="Lime"
                       FontWeight="Bold"
                       FontSize="14"
                       HorizontalAlignment="Center"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"/>

        </StackPanel>
    </Grid>
</Page>
